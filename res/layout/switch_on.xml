<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="54dp"
        android:text="Press the button below to connect to your pre-Defined Wheelchair."
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="37dp"
        android:text=" **This action requires you to turn ON your Phone&apos;s Bluetooth to wirelessly Connect to the Bluetooth slave machine. In this case, the bluetooth slave machine is the WHEELCHAIR."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/wheelchair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:src="@raw/wheelchair"
        android:contentDescription="@string/none_found" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="CONNECTION TAB"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/ConnectWheelchair"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:text="CONNECT" />

</RelativeLayout>
